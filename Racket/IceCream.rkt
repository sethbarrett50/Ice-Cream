#lang racket

(define Person% (class object%
    (super-new)
    (init name cash portion)
    (define __name name)
    (define __cash cash)
    (define __portion portion)
    (define/public (get-name) __name)
    (define/public (get-cash) __cash)
    (define/public (set-name name) 
        (set! __name name))
    (define/public (set-cash cash) 
        (set! __cash cash))
    (define/public (set-portion totalCash totalGal)
         (set! __portion (* (/ __cash totalCash) totalGal)))
    (define/public (display-info)
        (printf "Name: ~a\n" __name)
        (printf "Cash: ~a\n" __cash)
        (printf "Portion: ~a\n\n" __portion))
))

(define people (list))
(define totalCash 0)


(for ([i (in-naturals)])
    (printf "Add person?(y/n)\n")
    #:break (equal? (read-line) "n")
    (printf "Name: " )
    (define name (read-line))
    (printf "Cash Thrown: $")
    (define cash (read-line))
    (set! cash (string->number cash))
    (set! people (append people (list (new Person% (name name) (cash cash) (portion 0)))))
    (set! totalCash (+ totalCash cash))
)

(printf "Total gallons of ice cream acquired: ")
(define totalGal (string->number (read-line)))

(for ([i (length people)])
    (define peep (list-ref people i))
    (send peep set-portion totalCash totalGal))

(for ([i (length people)])
    (define peep (list-ref people i))
    (send peep display-info))
